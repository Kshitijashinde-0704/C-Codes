#include<stdio.h>
#include <stdbool.h>

bool ChackDivisible(int iNo)
{
    if((iNo % 5) == 0)
    {
        return true;
    }
    else
    {
        return false;
    }
}
int main()
{
       int iValue = 0;
       bool bRet = false;

       printf("Enter number to chack whether it is even or odd : \n");
       scanf("%d",&iValue);

       bRet = ChackDivisible(iValue);
        if(bRet == true)
       {
        printf("%d is divisibal by 5\n",iValue);
       }
       else
       {
        printf("%d is not divisibal by 5\n",iValue);
       }

       return 0;
}
